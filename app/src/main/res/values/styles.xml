<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowAnimationStyle">@style/anima_activity</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackgroundStyle</item>
        <item name="android:windowTitleSize">@dimen/title_bar_height</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColorHint">@color/textHint</item>
    </style>

    <style name="anima_activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_in_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_out_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_in_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_out_anim</item>
    </style>

    <style name="CustomWindowTitleBackgroundStyle">
        <item name="android:background">@color/titleBackground</item>
    </style>

    <style name="Tantransparent" parent="@android:style/Theme.Dialog">

        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="TabTheme" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/MyWidget.TabPageIndicator</item>
        <item name="android:animationDuration">5000</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyWidget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi_tab_indicator_community</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@drawable/tab_selector</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:maxLines">1</item>
    </style>
    <!-- 公用按钮样式 -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/corners_pink_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="ButtonStyle.Gray">
        <item name="android:background">@drawable/corners_gray_selector</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/corners_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>
    <style name="EditTextStyle_Suggestions" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:hint">@string/opinion_hint</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>
    <!-- 公用按钮样式 -->
    <style name="common_buttom_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_heigh</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">@drawable/corners_confirm</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    
    <style name="common_buttom_style_one">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_heigh</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="EditTextStyle.Fillet" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/corners_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>
    
    <style name="TextViewStyle.Gray">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="TextViewStyle.Label">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="DialogStyleActivity" parent="AppBaseTheme">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/anima_activity</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackgroundStyle</item>
        <item name="android:windowTitleSize">@dimen/title_bar_height</item>
    </style>


    
     <style name="mydialog" parent="@android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:backgroundDimEnabled">true</item>  
        <item name="android:windowBackground">@android:color/transparent</item>  
    </style>  

      <!-- 背景透明 -->
      <style name="activity_full_transparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="order_detail_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/text_view_height_mid</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="order_detail_textview.margin" parent="order_detail_textview">
        <item name="android:layout_marginLeft">@dimen/common_margin</item>
        <item name="android:layout_marginRight">@dimen/common_margin</item>
    </style>
    <style name="order_detail_textview.weight" parent="order_detail_textview">
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="order_detail_textview_highlight" parent="order_detail_textview.weight">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="order_item_cell_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_view_height_mid</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="cell_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/text_view_height</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="cell_textview.padding"  parent="cell_textview">
        <item name="android:paddingLeft">@dimen/margin</item>
    </style>

    <style name="big_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:enabled">true</item>
        <item name="android:background">@drawable/corners_pink_selector</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="order_confirm_cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/cell_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/common_margin</item>
        <item name="android:paddingRight">@dimen/common_margin</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="order_confirm_cell_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/cell_item_height</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="order_confirm_cell_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/cell_item_height</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
    </style>

    <style name="order_confirm_cell_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/frame_pink_text_selector</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/frame_pink_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Cell_Block_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Cell_Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>



    <style name="Cell_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_micro</item>
        <item name="android:layout_marginBottom">@dimen/margin_micro</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Cell_Text_Head" parent="Cell_Text">
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="Cell_Text_Head_Image" parent="Cell_Text_Head">
        <item name="android:drawablePadding">@dimen/margin</item>
    </style>

    <style name="Cell_Text_Value" parent="Cell_Text">
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>

    <style name="Cell_Text_Tail" parent="Cell_Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="Cell_Text_Tail.Red">
        <item name="android:textColor">@color/textPrice</item>
    </style>

    <style name="Cell_Right_Arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="Cell_Header_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/margin_micro</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">19dip</item>
        <item name="android:maxHeight">19dip</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.1</item>
    </style>
</resources>