<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin">
            <TextView
                style="@style/TextViewStyle"
                android:layout_width="80dp"
                android:text="@string/msg_delivery_time"/>

            <TextView
                android:id="@+id/date_time_start_first"
                android:layout_marginLeft="@dimen/margin_small"
                style="@style/TextViewStyle"
                android:layout_width="50dp"
                android:background="@drawable/linear_boder"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <View
                android:layout_width="7dp"
                android:layout_height="1dp"
                android:background="@color/half_translucence"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"/>
            <TextView
                android:id="@+id/date_time_end_first"
                style="@style/TextViewStyle"
                android:layout_width="50dp"
                android:background="@drawable/linear_boder"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <LinearLayout
                android:id="@+id/ll_add_ll"
                android:layout_width="50dp"
                android:layout_height="29dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_add"
                    android:layout_marginLeft="@dimen/margin"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/one_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_list"
            android:layout_marginLeft="@dimen/margin"/>
        <LinearLayout
            android:id="@+id/ll_second"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin">
            <TextView
                android:id="@+id/date_time_start_second"
                android:layout_marginLeft="88dp"
                style="@style/TextViewStyle"
                android:layout_width="50dp"
                android:background="@drawable/linear_boder"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <View
                android:layout_width="7dp"
                android:layout_height="1dp"
                android:background="@color/half_translucence"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"/>
            <TextView
                android:id="@+id/date_time_end_second"
                style="@style/TextViewStyle"
                android:layout_width="50dp"
                android:background="@drawable/linear_boder"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <LinearLayout
                android:id="@+id/ll_delete1_ll"
                android:layout_width="50dp"
                android:layout_height="29dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_delete"
                    android:layout_marginLeft="@dimen/margin"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:visibility="gone"
            android:id="@+id/second_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_list"
            android:layout_marginLeft="@dimen/margin"/>
        <LinearLayout
            android:id="@+id/ll_third"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin">
            <TextView
                android:id="@+id/date_time_start_third"
                android:layout_marginLeft="88dp"
                style="@style/TextViewStyle"
                android:layout_width="50dp"
                android:background="@drawable/linear_boder"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <View
                android:layout_width="7dp"
                android:layout_height="1dp"
                android:background="@color/half_translucence"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small"/>
            <TextView
                android:id="@+id/date_time_end_third"
                style="@style/TextViewStyle"
                android:layout_width="50dp"
                android:background="@drawable/linear_boder"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <LinearLayout
                android:id="@+id/ll_delete2_ll"
                android:layout_width="50dp"
                android:layout_height="29dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_delete"
                    android:layout_marginLeft="@dimen/margin"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/third_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_list"
            />
    </LinearLayout>
</LinearLayout>
