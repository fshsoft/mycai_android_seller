    <EditText
        android:id="@+id/edit_new_mobile"
        style="@style/EditTextStyle"
        android:drawableLeft="@drawable/ic_mobile"
        android:drawablePadding="@dimen/margin_small"
        android:hint="@string/new_hint_mobile"
        android:inputType="phone"
        android:maxLength="11"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin">

        <EditText
            android:id="@+id/new_edit_code"
            style="@style/EditTextStyle"
            android:layout_weight="1"
            android:hint="@string/input_code"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="6"/>

        <Button
            android:id="@+id/get_code"
            style="@style/ButtonStyle"
            android:layout_width="120dp"
            android:layout_marginLeft="@dimen/margin_mid"
            android:text="@string/lable_get_identifying" />
    </LinearLayout>

    <Button
        android:id="@+id/save_new_mobile"
        style="@style/ButtonStyle"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/save"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"/>
</LinearLayout>
