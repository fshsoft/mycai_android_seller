<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000">

    <LinearLayout
        android:id="@+id/pop_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/linear_boder"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/red_bg">

            <TextView
                android:id="@+id/pop_title"
                style="@style/TextViewStyle"
                android:layout_centerInParent="true"
                android:text="@string/order_reply"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/reply_content"
                style="@style/EditTextStyle"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/style_edt_boder"
                android:gravity="left"
                android:hint="@string/tip_reply_hint"
                android:maxLength="250"
                android:paddingTop="5dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_list" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_pop_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_centerInParent="true"
                    android:text="@string/cancel"
                    android:textSize="@dimen/text_size_big" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#E8E8E8" />

            <RelativeLayout
                android:id="@+id/rl_pop_sure"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_centerInParent="true"
                    android:text="@string/ok"
                    android:textColor="@color/red_bg"
                    android:textSize="@dimen/text_size_big" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
