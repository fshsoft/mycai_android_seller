<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
    >


    <RelativeLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin"
        >

        <TextView
            android:id="@+id/msg_title_tv"
            style="@style/TextViewStyle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_micro"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/msg_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/the_point"
            />

        <TextView
            android:id="@+id/msg_content_tv"
            style="@style/TextViewStyle.Gray"
            android:layout_below="@id/msg_title_tv"
            android:layout_marginLeft="@dimen/margin_micro"
            android:layout_marginTop="@dimen/margin_small"
            android:maxLines="2"
            android:singleLine="false"
            android:textSize="@dimen/text_size_small"
            />

        <TextView
            android:id="@+id/msg_date_tv"
            style="@style/TextViewStyle.Gray"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/msg_content_tv"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="right"
            android:textSize="@dimen/text_size_small"
            tools:text="15-03-28"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/content_ll"
        android:layout_marginLeft="@dimen/margin"
        android:background="@color/gray"/>
</RelativeLayout>