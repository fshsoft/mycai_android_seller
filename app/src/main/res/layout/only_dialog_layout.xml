<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 	android:background="@android:color/transparent"
 	>
    
    <RelativeLayout
        android:layout_width="270dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/frame_white_blackboard" >

        <RelativeLayout
            android:id="@+id/dialog_top_layout"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:background="@drawable/frame_pink_blackboard" >
            <ImageView 
                android:id="@+id/gou_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/white_gou"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/detail_finsh_service"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/gou_imageView"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_middle_layout"
            android:layout_width="270dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_top_layout"
             >

            <TextView
                style="@style/TextViewStyle"
                android:id="@+id/messageTextView"
                android:layout_margin="@dimen/common_margin"
                android:scrollbars="vertical"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="270dip"
            android:layout_height="70dip"
            android:layout_below="@+id/dialog_middle_layout"
             >
            <Button
                android:id="@+id/btn_only_cancel"
                android:layout_width="70dip"
                android:layout_height="30dip"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@android:color/white"
                android:background="@drawable/corners_pink_selector"
                android:layout_marginTop="1dip"
                />
        </RelativeLayout>
    </RelativeLayout>
    

</RelativeLayout>
