<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/order_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mid"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="@dimen/margin_micro">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_mid"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/margin"
                android:paddingLeft="@dimen/margin_mid"
                android:paddingRight="@dimen/margin_mid"
                android:paddingTop="@dimen/margin">

                <TextView
                    android:id="@+id/order_no"
                    style="@style/TextViewStyle"
                    android:textColor="@color/textTheme"
                    android:textSize="@dimen/text_size_large"
                    tools:text="@string/order_time_arg" />

                <TextView
                    android:id="@+id/order_time"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin"
                    android:textColor="@color/textTheme"
                    android:textSize="@dimen/text_size_small"
                    tools:text="@string/show_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_mid"
                android:paddingBottom="@dimen/margin"
                android:paddingTop="@dimen/margin">

                <TextView
                    android:id="@+id/order_goods_name"
                    style="@style/TextViewStyle"
                    tools:text="@string/order_time_arg" />

                <TextView
                    android:id="@+id/order_status"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin"
                    android:gravity="right"
                    android:textColor="@color/text_order_list_state"
                    tools:text="@string/show_text" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/divider_list" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/margin"
                android:paddingLeft="@dimen/margin_mid"
                android:paddingRight="@dimen/margin_mid"
                android:paddingTop="@dimen/margin">

                <TextView
                    android:id="@+id/order_amount"
                    style="@style/TextViewStyle.Gray"
                    android:textSize="@dimen/text_size_small"
                    tools:text="@string/order_amount_arg" />

                <TextView
                    android:id="@+id/order_status_pay"
                    style="@style/TextViewStyle.Gray"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_small"
                    tools:text="@string/order_sn_arg" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>