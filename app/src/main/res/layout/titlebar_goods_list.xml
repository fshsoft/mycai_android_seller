<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/title_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:src="@drawable/ic_back_primary"/>

    <Button
        android:id="@+id/title_xxe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="@dimen/title_bar_margin"
        android:layout_toRightOf="@id/title_left"
        android:layout_marginLeft="@dimen/margin_micro"
        android:visibility="invisible"
        android:text="@string/add_text"
        android:textColor="@color/titleText"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/title_bar_margin"
        android:text="@string/app_name"
        android:textSize="@dimen/title_bar_text_size"
        android:layout_toLeftOf="@+id/title_add"
        android:layout_toRightOf="@+id/title_xxe"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/titleText"
        android:textStyle="bold"/>


    <!--<ImageView-->
    <!--android:id="@+id/title_right"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="match_parent"-->
    <!--android:paddingLeft="@dimen/margin_small"-->
    <!--android:paddingRight="@dimen/margin_small"-->
    <!--android:src="@drawable/ic_search"/>-->

    <Button
        android:id="@+id/title_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="@dimen/title_bar_margin"
        android:layout_toLeftOf="@+id/title_right"
        android:layout_marginRight="@dimen/margin_micro"
        android:text="@string/add_text"
        android:textColor="@color/titleText"/>

    <SearchView
        android:id="@+id/title_right"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:queryHint="@string/msg_import_goods_name"
        android:searchIcon="@drawable/ic_search_title"
        android:imeOptions="actionSearch"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"/>
</RelativeLayout>